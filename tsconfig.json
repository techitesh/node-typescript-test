{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": false,
        "baseUrl": "./src",
        "paths": {
            "@root/*": ["*"],
            "@config/*": ["config/*"],
            "@helpers/*": ["helpers/*"],
            "@controllers/*": ["controllers/*"],
            "@models/*" : ["models/*"],
            "@routes/*": ["routes/*"],
            "@views/*": ["views/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
